<h1><%= @physican.name %>, M.D.'s Appointments</h1>
<%= link_to 'Add Appointment', new_physician_appointment_path(@physican), class:"ui button blue inverted" %>
<hr />

<h2>Patients</h2>
<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= patient.physican.full_name %>
      <br />
      <%= link_to "Delete Appointment", physician_appointment_path(@physician, appointment), method: :delete %>
    </li>
  <% end %>
</ul>

