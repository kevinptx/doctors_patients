<h1>Create New Appointment</h1>
<%= form_with model: [@physician, @appointment], local: true, class: "ui form" do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.map { |p| [p.full_name, p.id]} %>
  <br>
  <%= f.label :datetime %>
  <%= f.datetime_local_field :time %>
  <br>
  <br>
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>